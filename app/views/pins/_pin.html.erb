<div class="box">
	<%= link_to (image_tag pin.image), pin %> 
	<p class="description">
		<strong>
			<%= pin.description %></td>
		</strong>
	</p>
	<p>
		Posted by <%= pin.user.first_name %> <%= pin.user.last_name %>
	</p>

	<% if current_user == pin.user %>
		<p>
			<%= link_to 'Edit', edit_pin_path(pin) %>
			<%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
	<% end %>
</div>